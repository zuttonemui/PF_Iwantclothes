<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4 side-menu">
      <div class="mb-2">
        <h5 class="mb-3 ja">カテゴリ</h5>
          <%= render 'categories/index', categories: @categories, category: Category.new, group: CategoryGroup.new %>
      </div>
      <div class="tag-menu">
        <h5 class="mb-3 ja">タグ</h5>
        <div>
          <% Tag.all.each do |tag| %>
            &ensp;
            <p class="want-tags">
              <%= link_to search_path(content: tag.name, model: "tag", method: "perfect") do %>
                <%= tag.name %>
              <% end %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8 main">
      <% if user_signed_in? %>
        <div class="row mb-4">
          <%= render 'layouts/errors', obj: @want_item %>
          <%= render 'form', want_item: @want_item %>
        </div>
      <% end %>
      <%= render 'index', want_items: @want_items %>
    </div>
  </div>
</div>