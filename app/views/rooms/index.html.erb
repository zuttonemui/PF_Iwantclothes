<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% @rooms.each do |room| %>
        <div>
          <%= link_to dm_user_path(room.chat_partner(current_user)) do %>
            <div>
              <h3>
                <%= opponent_user(room) %>
              </h3>
              <p>
                <%= most_new_message_preview(room) %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>