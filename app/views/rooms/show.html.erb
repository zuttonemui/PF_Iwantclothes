<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
    </div>
    <div class="col-md-1 mypage-menu">
    </div>
    <div class="col-md-7">
      <h4 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">to <%= @user.name %></h4>
      <div class="message">
        <% @letters.each do |letter| %>
          <% if letter.user_id == current_user.id %>
            <!--<div class="row">-->
            <!--  <div class="col-8 offset-2 mb-3">-->
                <p style="text-align: right;"><%= letter.message %></p>
            <!--  </div>-->
            <!--  <div class="col-2">-->

            <!--  </div>-->
            <!--</div>-->

          <% else %>
            <p style="text-align: left;"><%= letter.message %></p>
          <% end %>
        <% end %>
      </div>

      <div class="errors">
        <%= render "layouts/errors", obj: @letter %>
      </div>

      <%= form_with model: @letter, data: {remote: true} do |f| %>
        <%= f.text_field :message, class: "form-control" %>
        <%= f.hidden_field :room_id %>
      <% end %>
    </div>
  </div>
</div>
