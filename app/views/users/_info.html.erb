<div class="polaroid my-3">
  <% if current_user == user && current_user.is_admin == false %>
    <%= link_to edit_user_path(user) do %>
      <i class="fas fa-cog gear"></i>
    <% end %>
  <% end %>

  <%= image_tag user.get_profile_image(180,180) %>
  <p>
    <%= user.name %>
    <span>
      <%= link_to do %>
        <%=image_tag "instagram.png", class: "icon" %>
      <% end %>
    </span>
    <span>
      <%= link_to do %>
        <%=image_tag "twitter.png", class: "icon" %>
      <% end %>
    </span>
  </p>
</div>
<div class="mb-3">
  <p class="introduction"><%= user.introduction %></p>
</div>

<div class="row mb-3 follow-btn-<%= user.id %>">
  <%= render "relationships/btn", user: user %>
  <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
    <%= link_to 'letter', letter_path(user), class: "btn btn-outline-secondary ml-3" %>
  <% end %>
</div>