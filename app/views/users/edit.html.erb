<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <%= render "info", user: @user %>
    </div>

    <div class="col-md-7 offset-1">
      <h4 class="m-4">edit profile</h4>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group edit-profile">
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group edit-profile">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group edit-profile">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group edit-profile">
          <%= f.label :instagram %>
          <%= f.text_field :instagram, class: "form-control", placeholder: "Instagram URL" %>
        </div>
        <div class="form-group edit-profile">
          <%= f.label :twitter %>
          <%= f.text_field :twitter, class: "form-control", placeholder: "Twitter URL" %>
        </div>
        <div class="form-group edit-profile mt-5">
          <%= f.submit "send", class: "btn btn-outline-secondary btn-block" %>
        </div>
        <div class="form-group edit-profile">
          <%= link_to "退会する", user_unsubscribe_path(@user), class: "btn btn-sm btn-default btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
