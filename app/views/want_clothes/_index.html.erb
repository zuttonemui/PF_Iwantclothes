<% want_clothes.each do |want_clothes| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= link_to user_path(want_clothes.user) do %>
        <%= image_tag want_clothes.user.get_profile_image(80,80) %>
        <%= want_clothes.user.name %>
      <% end %>
    </div>
    <div class="col-md-9 px-5 want-content">
      <div class="row pb-3">
        <%= want_clothes.content %>
      </div>
      <div class="row pb-2">
        <% if want_clothes.want_image.present? %>
          <%= image_tag want_clothes.get_want_image(300,300) %>
        <% end %>

        <% if want_clothes.user == current_user %>
          <%= link_to edit_want_clothe_path(want_clothes) do %>
            <i class="fas fa-pen"></i>
          <% end %>
        <% end %>

        <% if want_clothes.user == current_user || want_clothes.user.is_admin == true %>
          <%= link_to want_clothe_path(want_clothes), method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        <% end %>

        <!--want_clothes.genre.name-->
        <%=  %>
        <!--want_clothes.tag.name-->
        <%=  %>
      </div>
  </div>
  <div class="row mb-3 answer-index">
    <% want_clothes.want_answers.each do |answer| %>
      <% answer.content %>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="row pb-3">

    </div>
  <% end %>
</div>
<% end %>