<table>
  <tbody>
      <% want_clothes.want_answers.each do |answer| %>
      <tr>
        <td>
          <%= link_to user_path(answer.user) do %>
            <%= image_tag answer.user.get_profile_image(80,80) %><br>
            <%= answer.user.name %>
          <% end %>
        </td>
        <td><%= answer.comment %></td>
        <td>
          <% if answer.user == current_user %>
            <%= link_to want_clothe_want_answer_path(want_clothing, want_answer), method: :delete, remote: true do %>
              <%= image_tag 'stash.png', size: "20" %>
            <% end %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>